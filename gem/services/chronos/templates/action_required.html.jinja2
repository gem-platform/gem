{# Brand #}
<h1>GEM</h1>

{# Welcome #}
<p>
    Hare Krishna, {{ user.name }}!
</p>
<p>
    {% if event == "start" %}
    Meeting "{{ meeting.title }}" is started.
    ({{meeting.start}} â€“ {{meeting.end}})
    {% else %}
    Meeting "{{ meeting.title }}" is about {{ (meeting.end - meeting.start).days }} days to end.
    {% endif %}

    {% if progress %}
    Your progress is: {{ progress }}%
    {% endif %}
</p>

{# Meeting agenda if any #}
{% if meeting.agenda %}
    <h2>Agenda</h2>
    <p>{{ meeting.agenda }}</p>
{% endif %}

{# List of proposals if any #}
{% if meeting.proposals %}
    <h2>List of proposals to review:</h2>
    <p>
        <ul>
        {% for proposal in meeting.proposals %}
            <li>{{ proposal.title }}</li>
        {% endfor %}
        </ul>
    </p>
{% endif %}

{# Join to meeting #}
<p>
    <a href="http://{{domain}}/meeting/{{meeting.id}}">Click here to join the meeting</a>
</p>
